                <div class="4u">
                    @Html.LabelFor(model => model.Motivation6)
                </div>
                <div class="8u">
                    @Html.EditorFor(model => model.Motivation6)
                    @Html.ValidationMessageFor(model => model.Motivation6)
                </div>
            </div>
        </section>

        <a class="button" href="#" onclick="$(this).closest('form').submit()">Надіслати</a>

        <script type="text/javascript">
            $(document).ready(function () {
                $(".calendar").datepicker({
                    dateFormat: "dd.mm.yy",
                });
            });
        </script>
    }
}