@inherits UmbracoViewPage<IPublishedContent>
@{
    Layout = null;
    var rootContent = Model.Siblings().Where(x => x.IsVisible());

    foreach (var content in rootContent)
    {
        @DrawNode(content)
        @DrawChildNodes(content)
        var newsRoot = content.Children().FirstOrDefault(i => i.DocumentTypeAlias == "umbNewsOverview");
        if (newsRoot != null)
        {
            @DrawNewsNodes(newsRoot)
        }
    }
}

@helper DrawChildNodes(IPublishedContent startNode)
{
    foreach (var node in startNode.Children.Where(x => x.IsVisible()))
    {
        @DrawNode(node)
        @DrawChildNodes(node)
    }
}

@helper DrawNewsNodes(IPublishedContent newsRoot)
{
    foreach (var node in newsRoot.Children)
    {
        @DrawNode(node)
    }
}

@helper DrawNode(IPublishedContent node)
{
    <url>
        <loc>@GetUrlWithDomainPrefix(node.Url)</loc>
        <lastmod>@(string.Format("{0:s}+00:00", node.UpdateDate))</lastmod>
    </url>
}

@functions {
    private static string GetUrlWithDomainPrefix(string url)
    {

        if (url.StartsWith("/"))
            url = url.Substring(1);

        var domainPrefix = string.Format("http://{0}/", HttpContext.Current.Request.ServerVariables["HTTP_HOST"]);

        if (url.StartsWith(domainPrefix))
            return url;
        else
            return domainPrefix + url;
    }
}