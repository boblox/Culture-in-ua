@inherits UmbracoTemplatePage
@{
    Layout = "ContentBase.cshtml";

    var fullName = string.IsNullOrWhiteSpace(CurrentPage.Title)
        ? CurrentPage.Name
        : CurrentPage.Title;
}

@section Body
{
    <header>
        <h1>@fullName</h1>
    </header>
    <h3>@CurrentPage.Occupation</h3>
    <div class="text-content">
        @CurrentPage.BodyText
    </div>
    @*Do not show image*@
    @*@if (string.IsNullOrWhiteSpace(CurrentPage.Image) == false)
        {
            <span class="image image-full"><img src="@CurrentPage.Image" alt="" /></span>
        }*@
}

@section Sidebar
{
    @{ Html.RenderPartial("NewsWithHeaderSidebar"); }
}